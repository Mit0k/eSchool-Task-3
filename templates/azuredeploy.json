{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "functions": [],
  "parameters": {
    "KvObjectID": {
      "type": "string"
    },
    "prefix": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "databaseUsername": {
      "type": "string"
    },
    "databasePassword": {
      "type": "securestring"
    },
    "cpuThreshold": {
      "type": "int"
    },
    "minInstances": {
      "type": "int"
    },
    "maxInstances": {
      "type": "int"
    },
    "slackURL": {
      "type": "securestring"
    },
    "alertScript": {
      "type": "string"
    },
    "vnetAddressPrefixes": {
      "type": "string"
    },
    "snetAddressPrefix": {
      "type": "string"
    },
    "snetDBAddressPrefix": {
      "type": "string"
    },
    "dbPrivateIp": {
      "type": "string"
    },
    "RgList": {
      "type": "array"
    }
  },
  "variables": {
    "rg1": "[parameters('RgList')[0]]",
    "rg2": "[parameters('RgList')[1]]",
    "rg3": "[parameters('RgList')[2]]",
    "deploymentName1": "deployCommonBase",
    "deploymentName2": "deployCommonMetrics",
    "deploymentName3": "deployWebApp"
  },
  "resources": [
    {
      "name": "[variables('deploymentName1')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "resourceGroup": "[variables('rg1')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "relativePath": "artifacts/common.json"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "databaseUsername": {
            "value": "[parameters('databaseUsername')]"
          },
          "databasePassword": {
            "value": "[parameters('databasePassword')]"
          },
          "snetDBAddressPrefix": {
            "value": "[parameters('snetDBAddressPrefix')]"
          },
          "dbPrivateIp": {
            "value": "[parameters('dbPrivateIp')]"
          },
          "vnetAddressPrefixes": {
            "value": "[parameters('vnetAddressPrefixes')]"
          },
          "snetAddressPrefix": {
            "value": "[parameters('snetAddressPrefix')]"
          },
          "KvObjectID": {
            "value": "[parameters('KvObjectID')]"
          }
        }
      }
    },
    {
      "name": "[variables('deploymentName2')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "resourceGroup": "[variables('rg2')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "relativePath": "artifacts/metrics.json"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "cpuThreshold": {
            "value": "[parameters('cpuThreshold')]"
          },
          "slackURL": {
            "value": "[parameters('slackURL')]"
          },
          "alertScript": {
            "value": "[parameters('alertScript')]"
          },
          "webAppGroup": {
            "value": "[variables('rg3')]"
          }
        }
      }
    },
    {
      "name": "[variables('deploymentName3')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "resourceGroup": "[variables('rg3')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployment',variables('deploymentName1'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "relativePath": "artifacts/webapp.json"
        },
        "parameters": {
          "commonRG": {
            "value": "[variables('rg1')]"
          },
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "databaseUsername": {
            "value": "[parameters('databaseUsername')]"
          },
          "databasePassword": {
            "value": "[parameters('databasePassword')]"
          },
          "minInstances": {
            "value": "[parameters('minInstances')]"
          },
          "maxInstances": {
            "value": "[parameters('maxInstances')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
