{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "functions": [],
  "parameters": {
    "userObjectID": {
      "type": "string"
    },
    "prefix": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "databaseUsername": {
      "type": "string"
    },
    "databasePassword": {
      "type": "securestring"
    },
    "cpuThreshold": {
      "type": "int"
    },
    "minInstances": {
      "type": "int"
    },
    "maxInstances": {
      "type": "int"
    },
    "slackURL": {
      "type": "securestring"
    },
    "alertScript": {
      "type": "string"
    },
    "vnetAddressPrefixes": {
      "type": "string"
    },
    "snetAddressPrefix": {
      "type": "string"
    },
    "snetDBAddressPrefix": {
      "type": "string"
    },
    "dbPrivateIp": {
      "type": "string"
    },
    "RgList": {
      "type": "array"
    }
  },
  "variables": {
    "commonRG": "[parameters('RgList')[0]]",
    "metricRG": "[parameters('RgList')[1]]",
    "webappRG": "[parameters('RgList')[2]]",
    "deploymentCommon": "deployCommonBase",
    "deploymentMetrics": "deployCommonMetrics",
    "deploymentWebApp": "deployWebApp",
    "kvName": "[format('kv-{0}-{1}',parameters('prefix'),parameters('location'))]",
    "webAppName": "[format('app-{0}-{1}',parameters('prefix'),parameters('location'))]",
    "alertAppName": "[format('func-{0}-{1}',parameters('prefix'),parameters('location'))]"
  },
  "resources": [
    {
      "name": "[variables('deploymentCommon')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "resourceGroup": "[variables('commonRG')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "relativePath": "artifacts/common.json"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "databaseUsername": {
            "value": "[parameters('databaseUsername')]"
          },
          "databasePassword": {
            "value": "[parameters('databasePassword')]"
          },
          "snetDBAddressPrefix": {
            "value": "[parameters('snetDBAddressPrefix')]"
          },
          "dbPrivateIp": {
            "value": "[parameters('dbPrivateIp')]"
          },
          "vnetAddressPrefixes": {
            "value": "[parameters('vnetAddressPrefixes')]"
          },
          "snetAddressPrefix": {
            "value": "[parameters('snetAddressPrefix')]"
          },
          "userObjectID": {
            "value": "[parameters('userObjectID')]"
          },
          "slackURL": {
            "value": "[parameters('slackURL')]"
          }
        }
      }
    },
    {
      "name": "[variables('deploymentWebApp')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "resourceGroup": "[variables('webappRG')]",
      "dependsOn": [
        "[format('/subscriptions/{0}/resourcegroups/{1}/providers/Microsoft.Resources/deployments/{2}',subscription().subscriptionId,variables('commonRG'),variables('deploymentCommon'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "relativePath": "artifacts/webapp.json"
        },
        "parameters": {
          "commonRG": {
            "value": "[variables('commonRG')]"
          },
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "databaseUsername": {
            "value": "[parameters('databaseUsername')]"
          },
          "minInstances": {
            "value": "[parameters('minInstances')]"
          },
          "maxInstances": {
            "value": "[parameters('maxInstances')]"
          }
        }
      }
    },
    {
      "name": "[variables('deploymentMetrics')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "resourceGroup": "[variables('metricRG')]",
      "dependsOn": [
        "[format('/subscriptions/{0}/resourcegroups/{1}/providers/Microsoft.Resources/deployments/{2}',subscription().subscriptionId,variables('webappRG'),variables('deploymentWebApp'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "relativePath": "artifacts/metrics.json"
        },
        "parameters": {
          "commonRG": {
            "value": "[variables('commonRG')]"
          },
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "cpuThreshold": {
            "value": "[parameters('cpuThreshold')]"
          },
          "alertScript": {
            "value": "[parameters('alertScript')]"
          },
          "webAppGroup": {
            "value": "[variables('webappRG')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/accessPolicies",
      "name": "[concat(variables('kvName'), '/add')]",
      "apiVersion": "2021-11-01-preview",
      "properties": {
        "accessPolicies": [
          {
            "objectId": "[reference(format('/subscriptions/{0}/resourcegroups/{1}/providers/Microsoft.Web/sites/{2}',subscription().subscriptionId,variables('webappRG'),variables('webAppName')), '2021-02-01', 'Full').identity.principalId]",
            "permissions": {
              "secrets": ["List", "Get", "Set"]
            },
            "tenantId": "[reference(format('/subscriptions/{0}/resourcegroups/{1}/providers/Microsoft.Web/sites/{2}',subscription().subscriptionId,variables('webappRG'),variables('webAppName')), '2021-02-01', 'Full').identity.tenantId]"
          },
          {
            "objectId": "[reference(format('/subscriptions/{0}/resourcegroups/{1}/providers/Microsoft.Web/sites/{2}',subscription().subscriptionId,variables('metricRG'),variables('alertAppName')), '2021-02-01', 'Full').identity.principalId]",
            "permissions": {
              "secrets": ["List", "Get", "Set"]
            },
            "tenantId": "[reference(format('/subscriptions/{0}/resourcegroups/{1}/providers/Microsoft.Web/sites/{2}',subscription().subscriptionId,variables('metricRG'),variables('alertAppName')), '2021-02-01', 'Full').identity.tenantId]"
          }
        ]
      }
    }
  ],
  "outputs": {}
}
