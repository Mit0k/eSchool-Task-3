{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "functions": [],
  "parameters": {
    "prefix": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "databaseUsername": {
      "type": "string",
      "defaultValue": "mysqladmin"
    },
    "databasePassword": {
      "type": "securestring"
    },
    "cpuThreshold": {
      "type": "int",
      "metadata": {
        "description": "description"
      },
      "defaultValue": 75
    },
    "minInstances": {
      "type": "int",
      "defaultValue": 1
    },
    "maxInstances": {
      "type": "int",
      "defaultValue": 2
    },
    "slackURL": {
      "type": "securestring"
    },
    "alertScript": {
      "type": "string",
      "metadata": {
        "description": "description"
      }
    },
    "vnetAddressPrefixes": {
      "type": "string",
      "defaultValue": "10.2.0.0/16"
    },
    "snetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.2.0.0/24"
    },
    "snetDBAddressPrefix": {
      "type": "string",
      "defaultValue": "10.2.1.0/24"
    },
    "dbPrivateIp": {
      "type": "string",
      "defaultValue": "4"
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "deployCommonBase",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "resourceGroup": "[format('rg-{0}-common-base-{1}',parameters('prefix'),parameters('location'))]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "relativePath": "common.json"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "databaseUsername": {
            "value": "[parameters('databaseUsername')]"
          },
          "databasePassword": {
            "value": "[parameters('databasePassword')]"
          },
          "snetDBAddressPrefix": {
            "value": "[parameters('snetDBAddressPrefix')]"
          },
          "dbPrivateIp": {
            "value": "[parameters('dbPrivateIp')]"
          },
          "vnetAddressPrefixes": {
            "value": "[parameters('vnetAddressPrefixes')]"
          },
          "snetAddressPrefix": {
            "value": "[parameters('snetAddressPrefix')]"
          }
        }
      }
    },
    {
      "name": "deployCommonMetrics",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "resourceGroup": "[format('rg-{0}-common-metrics-{1}',parameters('prefix'),parameters('location'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'deployCommonBase')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "relativePath": "metrics.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "cpuThreshold": {
            "value": "[parameters('cpuThreshold')]"
          },
          "slackURL": {
            "value": "[parameters('slackURL')]"
          },
          "alertScript": {
            "value": "[parameters('alertScript')]"
          }
        }
      }
    },
    {
      "name": "deployWebApp",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "resourceGroup": "[format('rg-{0}-APP-{1}',parameters('prefix'),parameters('location'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'deployCommonMetrics')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "relativePath": "webapp.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "commonRG": {
            "value": "[reference('deployCommonBase').resourceGroup]"
          },
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "databaseUsername": {
            "value": "[parameters('databaseUsername')]"
          },
          "databasePassword": {
            "value": "[parameters('databasePassword')]"
          },
          "minInstances": {
            "value": "[parameters('minInstances')]"
          },
          "maxInstances": {
            "value": "[parameters('maxInstances')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
