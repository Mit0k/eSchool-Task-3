{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "functions": [],
  "parameters": {
    "prefix": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "databaseUsername": {
      "type": "string",
      "defaultValue": "mysqladmin"
    },
    "databasePassword": {
      "type": "securestring"
    },
    "cpuThreshold": {
      "type": "int",
      "metadata": {
        "description": "description"
      },
      "defaultValue": 75
    },
    "minInstances": {
      "type": "int",
      "defaultValue": 1
    },
    "maxInstances": {
      "type": "int",
      "defaultValue": 2
    },
    "slackURL": {
      "type": "securestring"
    },
    "alertScript": {
      "type": "string",
      "metadata": {
        "description": "description"
      }
    },
    "vnetAddressPrefixes": {
      "type": "string",
      "defaultValue": "10.2.0.0/16"
    },
    "snetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.2.0.0/24"
    },
    "snetDBAddressPrefix": {
      "type": "string",
      "defaultValue": "10.2.1.0/24"
    },
    "dbPrivateIp": {
      "type": "string",
      "defaultValue": "4"
    },
    "RgList": {
      "type": "array",
      "defaultValue": ["rg1", "rg1", "rg1"]
    },
    "UrlList": {
      "type": "array",
      "defaultValue": ["", null, null]
    }
  },
  "variables": {
    "rg1": "[parameters('RgList')[0]]",
    "rg2": "[parameters('RgList')[1]]",
    "rg3": "[parameters('RgList')[2]]",
    "link1": "[parameters('UrlList')[0]]",
    "link2": "[parameters('RgList')[1]]",
    "link3": "[parameters('RgList')[2]]"
  },
  "resources": [
    {
      "name": "deployCommonBase",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "resourceGroup": "[variables('rg1')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('link1')]"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "databaseUsername": {
            "value": "[parameters('databaseUsername')]"
          },
          "databasePassword": {
            "value": "[parameters('databasePassword')]"
          },
          "snetDBAddressPrefix": {
            "value": "[parameters('snetDBAddressPrefix')]"
          },
          "dbPrivateIp": {
            "value": "[parameters('dbPrivateIp')]"
          },
          "vnetAddressPrefixes": {
            "value": "[parameters('vnetAddressPrefixes')]"
          },
          "snetAddressPrefix": {
            "value": "[parameters('snetAddressPrefix')]"
          }
        }
      }
    },
    {
      "name": "deployCommonMetrics",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "resourceGroup": "[variables('rg2')]",
      "dependsOn": [
        "[format('/subscriptions/{0}/resourceGroups/{1}/providers/{2}/{3}',subscription().subscriptionId,variables('rg1'),'Microsoft.Resources/deployments', 'deployCommonBase')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "relativePath": "[variables('link2')]"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "cpuThreshold": {
            "value": "[parameters('cpuThreshold')]"
          },
          "slackURL": {
            "value": "[parameters('slackURL')]"
          },
          "alertScript": {
            "value": "[parameters('alertScript')]"
          }
        }
      }
    },
    {
      "name": "deployWebApp",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "resourceGroup": "[variables('rg3')]",
      "dependsOn": [
        "[format('/subscriptions/{0}/resourceGroups/{1}/providers/{2}/{3}',subscription().subscriptionId,variables('rg2'),'Microsoft.Resources/deployments', 'deployCommonMetrics')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('link3')]"
        },
        "parameters": {
          "commonRG": {
            "value": "[variables('rg1')]"
          },
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "databaseUsername": {
            "value": "[parameters('databaseUsername')]"
          },
          "databasePassword": {
            "value": "[parameters('databasePassword')]"
          },
          "minInstances": {
            "value": "[parameters('minInstances')]"
          },
          "maxInstances": {
            "value": "[parameters('maxInstances')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
